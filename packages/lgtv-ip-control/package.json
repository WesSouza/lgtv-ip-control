{
  "name": "lgtv-ip-control",
  "description": "IP Control module for 2018+ LG TVs",
  "version": "3.1.0",
  "author": "Wes Souza <hey@wes.dev> (https://wes.dev/)",
  "license": "MIT",
  "repository": "WesSouza/lgtv-ip-control",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "coverage": "vitest run -c ../../.config/vite.config.ts --coverage",
    "prepare": "yarn run build",
    "test:ci": "vitest run -c ../../.config/vite.config.ts --coverage",
    "test:ui": "vitest watch -c ../../.config/vite.config.ts --ui",
    "test:watch": "vitest watch -c ../../.config/vite.config.ts",
    "test": "vitest run -c ../../.config/vite.config.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^18.19.3",
    "@vitest/coverage-c8": "^0.28.5",
    "@vitest/ui": "^0.28.5",
    "esbuild": "^0.17.19",
    "rollup": "^3.29.4",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5",
    "vite": "^4.5.1",
    "vitest": "^0.28.5"
  },
  "importSort": {
    ".js, .jsx": {
      "parser": "babylon",
      "style": "wes"
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "wes"
    }
  }
}